{
    "version": 2,
    "builds": [
        {
            "src": "api/index.js",
            "use": "@vercel/node",
            "config": {
                "includeFiles": [
                    "controllers/**",
                    "routes/**",
                    "server/**"
                ]
            }
        }
    ],
    "rewrites": [
        {
            "source": "/(.*)",
            "destination": "/api"
        }
    ],
    "outputDirectory": ".",
    "buildCommand": "npm run build",
    "installCommand": "npm install"
}